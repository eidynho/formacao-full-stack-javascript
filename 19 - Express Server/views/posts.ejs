<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include ('partials/head.ejs')%>
</head>
<body>
    
    <%- include('partials/header.ejs') %>

    <main>
        <div class="container">

            <div class="content">
                <h1>Posts</h1>

                <div class="post-wrapper">
                    <% posts.forEach((post) => {%>

                        <div class="post">
                            <h2><%= post.title%></h2>
                            <p><%= post.text%></p>

                            <% if (post.stars) {%>
                                <% for( let index = 0; index < post.stars; index++ ) { %>
                                    <img src="https://cdn.iconscout.com/icon/free/png-256/star-bookmark-favorite-shape-rank-16-28621.png" alt="" width="20px">
                                <% } %>
                            <%}%>
                        </div>
                        
                    <%})%>
                </div>

            </div>

            

        </div>
    </main>

    <%- include('partials/footer.ejs') %>

    <%- include('partials/foot.ejs')%>

</body>
</html>